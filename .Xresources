#if __has_include(".extend.Xresources")
#include ".extend.Xresources"
#endif

Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

!XTerm*background: #2b2b2b
!XTerm*foreground: #e7e7e7
!XTerm*pointerColor: #16A085
!XTerm*faceName: Fixed
!XTerm*faceSize: 11

! Colors
#include ".colors/solarized"

! URxvt
URxvt.font:            xft:FantasqueSansMono Nerd Font Mono:size=11
URxvt.italicFont:      xft:FantasqueSansMono Nerd Font Mono:italic:size=11:autohint=true
URxvt.boldFont:        xft:FantasqueSansMono Nerd Font Mono:bold:size=11:autohint=true
URxvt.boldItalicFont:  xft:FantasqueSansMono Nerd Font Mono:bold:italic:size=11:autohint=true

URxvt.scrollBar:       false
URxvt.scrollBar_right: false

URxvt.letterSpace:     0
URxvt.lineSpace:       1

URxvt*depth:           24
URxvt.internalBorder:  16

! Extensions
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher:    /usr/bin/xdg-open
URxvt.matcher.button:  1
URxvt.matcher.rend.0:  Uline Bold fg5
